@model IEnumerable<Library.Domain.BookDetails>

@{
    ViewData["Title"] = "Discover books";
}

<!-- ---------- BOOK GRID ---------- -->
<div class="container">
    <div class="row g-4">
        @foreach (var book in Model)
        {
            <div class="col-12 col-sm-6 col-lg-4 col-xl-3 mb-4">
                <div class="modern-book-card position-relative">
                    <!-- Main card container -->
                    <div class="book-card-inner">
                        <!-- Image container with overlay -->
                        <div class="image-container position-relative overflow-hidden">
                            <img src="@book.ImageBinary"
                                 alt="@book.Title"
                                 class="book-image" />

                            <!-- Gradient overlay -->
                            <div class="gradient-overlay"></div>

                            <!-- Status badge -->
                            <div class="status-badge @(book.Copies.Any() ? "available" : "unavailable")">
                                <i class="fas @(book.Copies.Any() ? "fa-check-circle" : "fa-times-circle")"></i>
                                @(book.Copies.Any() ? "Available" : "Unavailable")
                            </div>

                            <!-- Book info overlay -->
                            <div class="book-overlay position-absolute">
                                <div class="book-meta">
                                    <div class="copies-count">
                                        <span class="count-number">@book.Copies.Count()</span>
                                        <span class="count-label">copies</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Content area -->
                        <div class="book-info">
                            <div class="card-content">
                                <h3 class="book-title">@book.Title</h3>
                                <p class="book-author">by: @book.Author?.Name</p>
                                <p class="book-description">@book.Description</p>
                            </div>
                            <!-- Action area -->
                            <div class="card-actions">
                                <a asp-controller="Books" asp-action="Edit" asp-route-id="@book.ID"
                                   class="btn-modern">
                                    <span>Manage Book</span>
                                    <i class="fas fa-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>